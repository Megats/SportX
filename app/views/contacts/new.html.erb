<div class="container">
  <h1 class="text-center font-extrabold mt-4">Contact Us</h1>
  <%= form_for @contact do |f| %>
    <div class="col-md-6 mt-6">
      <%= f.label :name %><br>
      <%= f.text_field  :name_contact, required: true, class: "contact-form-text-area" %><br>

      <%= f.label :email %><br>
      <%= f.text_field :email_contact, required: true, class: "contact-form-text-area" %><br>

      <%= f.label :message %><br>
      <%= f.text_area :message_contact, rows: 8, cols: 40, required: true, class: "contact-form-text-area", 
            placeholder: "Send me a message"%><br>

      <div class= "d-none" style="display: none;">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>

      <%= f.submit 'Send Message', class: 'btn btn-primary mt-4' %>
    </div>
  <% end %>
</div>