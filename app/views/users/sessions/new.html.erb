<div class="flex items-center justify-center h-screen bg-gray-100">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="bg-white w-96 p-6 rounded shadow-sm">
      <div class="flex items-center justify-center mb-4">
        <img src="/assets/sport_X_logo.png">
      </div>

          <div class="mb-6">
          <%= f.input :email, required: false, autofocus: true, input_html: {class: "form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", autocomplete: "email", id:"exampleFormControlInput1"} %>
          </div>
          <div class="mb-6">
          <%= f.input :password, required: false, autofocus: true, input_html: {class: "form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", autocomplete: "password", id:"exampleFormControlInput1"} %>
          </div>
          <div class="text-center pt-1 mb-12 pb-1">
          <%= f.button :submit, "Log in" %>
       <br><br>
       <%= render "users/shared/links" %>
        <% if !admin_signed_in? && !user_signed_in? %>
         <%= link_to "Sign in as admin", new_admin_session_path, class:"nav-link" %>
           <br>
         <%= link_to "Sign in as user", new_user_session_path, class:"nav-link" %>
        <% end %>
    </div>
   <% end %>